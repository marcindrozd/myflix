%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(:session, url: sign_in_path) do |f|
        %header
          %h1 Sign in
          .row
            .col-sm-4
              = f.email_field :email_address
          .row
            .col-sm-4
              = f.password_field :password
              = f.submit "Sign in"
